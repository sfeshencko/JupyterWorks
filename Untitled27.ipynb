    "def lagger(k):\n",
    "    if k == 1 :\n",
    "        return 1\n",
    "    if k == 2 :\n",
    "        return 1-2\n",
    "    if k == 3 :\n",
    "        return 1-2*2+0.5*2**2\n",
    "    if k >= 4:\n",
    "        return ((2*k-1-2)/k)*lagger(k-1)-((k-1)/k)*lagger(k-2)\n",
    "print lagger(5)"
   ]
